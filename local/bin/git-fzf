#!/usr/bin/env bash

set -euo pipefail

_fzf() { fzf --border --height '25%' --reverse --exit-0 "$@"; }

select_project_repo() {
  find -H "$HOME/projects" -maxdepth 2 -type d -or -type l \
  | _fzf --header 'Project Repositories' --prompt 'cd '
}

select_branch() {
  git branch -a \
  | sed -E 's/remotes\/[^\/]*\///g; /(\*|HEAD).*$/d' \
  | sort -u \
  | awk '{$1=$1};1' \
  | fzf --header 'Branches' --prompt 'git checkout '
}

"$@"
