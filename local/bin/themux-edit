#!/usr/bin/env bash

set -euo pipefail

conf_for_session() { echo "$HOME/.cache/$1.tmux.conf"; }

edit_and_reload() {
  >&2 echo "$0 $*"
  local -r s_id="$1"

  edit "$s_id"
  reload "$s_id"

  # ---

  # It's a little weird that the session's lifespan is tied to this function
  # like this, would like to maybe have a different version of this that's
  # "linked" that way. I'm just putting it here for convenience right now.

  # timeout_s=3
  # >&2 echo "Waiting ${timeout_s}s before killing session $s_id and cleaning up this host tmux window…"

  # for remaining_s in $(seq 1 $timeout_s | sort -rn); do
  #   >&2 echo "${remaining_s}s remaining… (^C to prevent)"
  #   sleep 1
  # done

  tmux \
    kill-session -t "$s_id" \; \
    kill-window
}

edit() {
  local -r s_id="$1"
  local conf; conf="$(conf_for_session "$s_id")"; readonly conf

  >&2 echo "Editing $conf …"
  "$EDITOR" "$conf"
}

reload() {
  local -r s_id="$1"
  local conf; conf="$(conf_for_session "$s_id")"; readonly conf

  >&2 echo "Applying ${conf}…"
  # shellcheck disable=SC2016
  tmux \
    set-option -t "$s_id" remain-on-exit off \; \
    new-window -t "$s_id" -- "tmux source-file '$conf'; tmux kill-window" \; \
    set-option -t "$s_id" remain-on-exit on
}

setup() {
  local s_id; s_id="$(uuidgen)"; s_id="${s_id,,}"; readonly s_id
  local conf; conf="$(conf_for_session "$s_id")"; readonly conf

  # This regex replace isn't quite perfect; if any flags are grouped it will
  # likely miss the `-g` part, but I haven't run into that yet, so.
  cat | sed -e 's/ -g / /g' > "$conf"

  tmux \
    new-window "
      TMUX= tmux -f '$conf' \
        new-session -n 'example window 0' -s '$s_id' \; \
        new-window  -n 'example window 1' -- neofetch \; \
        set-option remain-on-exit on \; \
        set-option pane-border-format '#{pane_index} #{pane_pid} (#{pane_height}x#{pane_height}) - #{pane_current_command}' \; \
        split-pane -v -- neofetch \; \
        split-pane -h -- neofetch
    " \; \
    split-window -v -- "'$0' 'edit_and_reload' '$s_id'" \; \
    split-window -v -d -- "entr -p -- '$0' reload '$s_id' <<< '$conf'" \; \
    select-layout main-vertical \; \
    resize-pane -t 0 -R 42 \; \
    resize-pane -t 2 -D 15
}

# ---

"$@"
