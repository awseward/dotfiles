[user]
  name  = Andrew Seward
  email = awswrd@gmail.com

[alias]
  ### Informational
  # Long-form
  alias            = !git config --get-regex '^alias\\.'
  amend            = commit --amend
  blame-short      = blame -c
  chart            = !git diff --stat=$(tput cols)
  fetch-all        = !git remote -v | awk '{print $1}' | sort -u | xargs -L1 git fetch -v --progress
  files            = diff --name-only
  github-log       = !git --no-pager prettylog --reverse
  info-pane        = !clear && git status && git stash list
  last-commit      = log -n 1
  local-branches   = branch -l
  message          = show -s --format=medium
  nuke-dry         = clean -xdfn
  nuke-interactive = clean -xdfi
  prettylog        = log --pretty=format:'%C(blue)%h%C(reset) %C(bold)%s%C(reset) %C(yellow)<%ae>%C(reset)' --abbrev-commit
  push-force       = push --force-with-lease
  remote-branches  = branch -r
  summary          = diff --shortstat
  tags             = tag -l --sort=v:refname
  # Abbreviated
  br   = branch
  bs   = !git blame-short
  ch   = !git chart
  cm   = commit
  dc   = diff --cached
  fa   = !git fetch-all
  ghl  = !git github-log
  l5   = !git github-log -n5
  l10  = !git github-log -n10
  lbr  = !git local-branches
  lc   = !git last-commit
  lm   = log master..
  msg  = !git message
  nd   = !git nuke-dry
  ni   = !git nuke-interactive
  p    = push -u
  pf   = !git push-force
  pfoh = !git push-force origin HEAD
  pl   = !git prettylog
  poh  = push -u origin HEAD
  puom = pull origin master
  rbr  = !git remote-branches
  st   = status
  sum  = diff --shortstat

  ### Potentially destructive
  # Long-form
  back             = checkout -
  nuke             = clean -xdf
  submodule-update = !git submodule update --init --recursive
  # Abbreviated
  cl  = clean -df
  co  = checkout
  sub = !git submodule-update

[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
  ui          = auto

[color "branch"]
  current  = white bold reverse
  local    = green
  remote   = yellow
  upstream = yellow bold

[color "diff"]
  commit     = yellow bold
  frag       = blue ul
  func       = blue bold
  meta       = cyan bold
  new        = green bold
  old        = red bold
  whitespace = red reverse

[color "status"]
  branch    = white bold ul
  changed   = yellow bold reverse
  header    = black bold
  untracked = normal bold reverse
  updated   = magenta bold
  unmerged  = red bold reverse

[core]
  autocrlf   = input
  editor     = vim
  ignoreCase = true
  pager      = less -F -X
  safecrlf   = warn
  trustctime = false
  excludesfile = /Users/andrew/.gitignore

[core.whitespace]
  tab-in-indent = true

[diff]
  algorithm           = patience
  compactionHeuristic = true
  renames             = copies

[merge]
  verbosity = 5

[push]
  default = current

[status]
  showUntrackedFiles = all

[fetch]
  prune = false

[commit]
  verbose = true

[checkout]
  defaultRemote = origin
