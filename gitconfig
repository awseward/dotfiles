[user]
  name = Andrew William Seward
  email = awswrd@gmail.com

[alias]
  ### Informational
  # Long-form
  amend = commit --amend
  chart = !git diff --stat=$(tput cols)
  files = diff --name-only
  info-pane = !clear && git status && git stash list
  last-commit = log -n 1
  local-branches = branch -l
  nuke-dry = clean -xdf
  remote-branches = branch -r
  summary = diff --shortstat
  # Abbreviated
  br = branch
  ch = !git chart
  lbr = !git local-branches
  lc = !git last-commit
  lm = log master..
  rbr = !git remote-branches
  st = status
  sum = diff --shortstat

  ### Actually does something
  # Long-form
  nuke = clean -xdfn
  back = checkout -
  submodule-update = !git submodule update --init --recursive
  # Abbreviated
  co = checkout
  cl = clean -df
  sub = !git submodule-update

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto

[color "branch"]
  current = green bold
  local = green
  remote = yellow
  upstream = yellow bold

[color "diff"]
  commit = yellow bold
  frag = blue
  func = blue bold
  meta = cyan bold
  new = green bold
  old = red bold
  whitespace = red reverse

[color "status"]
  branch = red bold
  changed = yellow bold
  untracked = blue
  updated = white bold reverse
  unmerged = red reverse bold

[core]
  safecrlf = warn
  editor = vim
  pager = less -F -X
  ignoreCase = true

[diff]
  algorithm = patience
  renames = copies

[merge]
  verbosity = 5

[push]
  default = current

[status]
  showUntrackedFiles = all

[fetch]
  prune = false
