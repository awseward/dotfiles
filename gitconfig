[user]
  name = Andrew William Seward
  email = awswrd@gmail.com
[alias]
  ### Informational
  # Long-form
  chart = !git diff --stat=$(tput cols)
  files = diff --name-only
  info-pane = !clear && git status && git stash list
  last-commit = log -n 1
  local-branches = branch -l
  nuke-dry = clean -xdf
  remote-branches = branch -r
  summary = diff --shortstat
  # Abbreviated
  br = branch
  ch = !git chart
  lbr = !git local-branches
  lc = !git last-commit
  lm = log master..
  rbr = !git remote-branches
  st = status
  sum = diff --shortstat

  ### Actually does something
  # Long-form
  nuke = clean -xdfn
  back = checkout -
  submodule-update = !git submodule update --init --recursive
  # Abbreviated
  co = checkout
  cl = clean -df
  sub = !git submodule-update

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  safecrlf = warn
  editor = vim
  pager = less -F -X
  ignoreCase = true
[diff]
  algorithm = patience
  renames = copies
[push]
  default = current
[status]
  showUntrackedFiles = all
[fetch]
  prune = false
