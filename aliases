### general
alias back='cd -'
alias cp='cp -iv'
alias gr='grep -Irisn --color=auto'
alias hk='heroku'
alias l='exa -la'
alias ll='exa -l'
alias ln='ln -v'
alias ls='ls -hF --color=auto'
alias mkdir='mkdir -v'
alias mv='mv -iv'
alias p='ps -a'
alias path='pretty_path'
alias rm='rm -Iv'

### git
alias g='git'
alias gcpr='git_cherry_pick_and_reset'
alias gd='git checkout develop && git pull'
alias gm='git checkout master && git pull'

### hub
alias hc='hub compare'
alias hb='hub browse'

### make
alias m='make clean && make'
alias mc='make clean'

### valgrind
alias val='valgrind'
alias valgrind='valgrind --leak-check=yes'

### rcm
alias mkrc='mkrc -v'
alias rcdn='rcdn -v'
alias rcup='rcup -v'

### node
alias webpack-dev-server='webpack-dev-server --progress --colors'
alias webpack='webpack --progress --colors --watch'

### ruby
alias be='bundle exec'

### OS-specific
case "$OSTYPE" in
  (darwin*)
    alias ls="ls -hFG"
    alias rm="rm -dv"
  ;;
  (cygwin*)
    # ...
  ;;
  (linux*)
    # ...
  ;;
esac

if type "fzf" > /dev/null; then
  # (jr for 'Jump to Repo')
  # NOTE: This assumes a convention of repositories being located in:
  #       `$HOME/projects/$LANG_OR_CONTEXT/`
  alias jr='cd $(find -H "$HOME/projects" -mindepth 2 -maxdepth 2 -type d -or -type l | fzf --height 25% --reverse --border) && l'
  # (pv for 'PreView')
  alias pv="fzf --border --preview 'bat --style=numbers --color=always {}' --preview-window=right:60%:wrap --bind 'enter:accept+execute(vim {})'"
fi
