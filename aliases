### general
alias cp='cp -iv'
alias mkdir='mkdir -v'
alias ls='ls -hF --color=auto'
alias mv='mv -iv'
alias ln='ln -v'
alias rm='rm -Iv'
alias g='grep -Irisn --color=auto'
alias p='ps -a'
alias back='cd -'

