### general
alias cp='cp -iv'
alias mkdir='mkdir -v'
alias ls='ls -hF --color=auto'
alias mv='mv -iv'
alias ln='ln -v'
alias rm='rm -Iv'
alias gr='grep -Irisn --color=auto'
alias p='ps -a'
alias back='cd -'
alias path='pretty_path'

### git
alias g='git'
alias gp='git_push_and_compare'
alias gm='git checkout master && git pull'
alias gd='git checkout develop && git pull'
# Note: These two have largely been replaced by hub
#alias gr='git_open_remote'
#alias grc='git_remote_compare'

### make
alias m='make clean && make'
alias mc='make clean'

### valgrind
alias valgrind='valgrind --leak-check=yes'
alias val='valgrind'

### rcm
alias rcup='rcup -v'
alias rcdn='rcdn -v'
alias mkrc='mkrc -v'

### node
alias webpack='webpack --progress --colors --watch'
alias webpack-dev-server='webpack-dev-server --progress --colors'

### ruby
alias be='bundle exec'
# Tmuxinator doesn't seem to want to give the standard mux shortcut when
# installed by rbenv, so I'm just doing this for now because I don't care to 
# investivate it at the moment.
alias mux='tmuxinator'

### OS-specific
case "$OSTYPE" in
  (darwin*)
    alias ls="ls -hFG"
    alias rm="rm -dv"
  ;;
  (cygwin*)
    # ...
  ;;
  (linux*)
    # ...
  ;;
esac

### Windows dev
alias fake='./fake.bat'
alias paket='./paket.bat'
