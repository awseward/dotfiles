### make
alias m='make clean && make'
alias mc='make clean'

### valgrind
alias valgrind='valgrind --leak-check=yes '
alias val='valgrind'

### rcm
alias rcup='rcup -v'
alias rcdn='rcdn -v'
alias mkrc='mkrc -v'

### node
alias webpack='webpack --progress --colors --watch'
