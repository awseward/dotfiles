ENV['XDG_CONFIG_HOME'].
  then { (_1.nil? || _1.strip.empty?) ? "#{Dir.home}/.config" : _1 }.
  then { Pathname.new(_1) / 'Brewfile.d/*' }.
  then { Dir[_1] }.
  # See: https://github.com/Homebrew/homebrew-bundle/issues/521#issuecomment-509023309
  each { instance_eval File.read(_1) }

