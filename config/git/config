[user]
  name = Andrew Seward
  useConfigOnly = true

[alias]
  # Long-form
  alias            = !git config --get-regex '^alias\\.' | sed -E 's/^alias\\.//'
  amend            = commit --amend
  back             = checkout -
  blame-short      = blame -c
  chart            = !git diff --stat="$(tput cols)"
  fetch-all        = !git remote -v | awk '{print $1}' | sort -u | xargs -L1 git fetch -v --progress
  files            = diff --name-only
  gh-log           = !git --no-pager prettylog --reverse
  info-pane        = !clear && git status && git stash list
  last-commit      = log -n 1
  local-branches   = branch -l
  message          = show -s --format=medium
  nuke             = clean -xdf
  nuke-dry         = clean -xdfn
  nuke-interactive = clean -xdfi
  prettylog        = log --pretty=format:'%C(blue)%h%C(reset) %C(bold)%s%C(reset) %C(yellow)<%ae>%C(reset)' --abbrev-commit
  push-force       = push --force-with-lease
  remote-branches  = branch -r
  submodule-update = submodule update --init --recursive
  summary          = diff --shortstat
  tags             = tag -l --sort=v:refname
  # Abbreviated
  br   = branch
  bs   = blame-short
  ch   = chart
  cl   = clean -df
  cm   = commit
  co   = checkout
  dc   = diff --cached
  fa   = fetch-all
  ghl  = gh-log
  l10  = gh-log -n10
  l5   = gh-log -n5
  lbr  = local-branches
  lc   = last-commit
  msg  = message
  nd   = nuke-dry
  ni   = nuke-interactive
  p    = push -u
  pf   = push-force
  pfoh = push-force origin HEAD
  pl   = prettylog
  poh  = push -u origin HEAD
  # This may need "repairing" on newer repos; run this:
  #   git symbolic-ref refs/remotes/origin/HEAD refs/remotes/origin/main
  #
  puom = !git pull origin "$(git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@')"
  rbr  = remote-branches
  st   = status --untracked-files=no
  stu  = status
  sub  = submodule-update
  sum  = diff --shortstat

[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
  ui          = auto

[color "branch"]
  current  = white bold reverse
  local    = green
  remote   = yellow
  upstream = yellow bold

[color "diff"]
  commit     = yellow bold
  frag       = blue ul
  func       = blue bold
  meta       = cyan bold
  new        = green bold
  old        = red bold
  whitespace = red reverse

[color "status"]
  branch    = white bold ul
  changed   = yellow bold reverse
  header    = black bold
  untracked = normal bold reverse
  updated   = magenta bold
  unmerged  = red bold reverse

[core]
  autocrlf   = input
  editor     = nvim
  ignoreCase = true
  pager      = delta
  safecrlf   = warn
  trustctime = false

[core.whitespace]
  tab-in-indent = true

[diff]
  algorithm           = patience
  compactionHeuristic = true
  renames             = copies
  colorMoved          = default

[delta]
  syntax-theme = Nord
  line-numbers = true
  navigate     = true # use n and N to move between diff sections

[interactive]
  diffFilter = delta --color-only

[merge]
  verbosity     = 5
  conflictstyle = diff3

[push]
  default = current

[status]
  showUntrackedFiles = all

[fetch]
  prune = false

[commit]
  verbose = true

[checkout]
  defaultRemote = origin

[pull]
  rebase = false

[init]
  defaultBranch = main
